{
	"compilerOptions": {
		"target": "es2020",
		"module": "es6",
		"outDir": "./dist/",
		"strict": true,
		"moduleResolution": "node",
		"types": [
			"mocha",
			"node"
		],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts", "src/ipc.d.ts"],
	"exclude": [],
}